{
  "name": "npm-go-bin",
  "version": "0.0.1",
  "description": "Distribute and install Go binaries via NPM",
  "main": "./src/index.ts",
  "bin": "./bin/index.js",
  "scripts": {
    "test": "jest",
    "build": "rm -rf ./bin && esbuild --bundle src/index.ts --outfile=\"./bin/index.js\" --platform=node --minify-whitespace",
    "dev": "rm -rf ./bin && esbuild --watch --bundle src/index.ts --outfile=\"./bin/index.js\" --sourcemap --platform=node --metafile=meta.json",
    "prepublishOnly": "npm i && npm run build",
    "lint": "eslint ."
  },
  "author": "Yauheni Abramovich",
  "packageManager": "yarn@3.5.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/evg4b/npm-go-bin.git"
  },
  "homepage": "https://github.com/evg4b/npm-go-bin",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.194",
    "@types/node-fetch": "^2.6.3",
    "@types/tar": "^6.1.4",
    "@types/unzipper": "^0.10.5",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "esbuild": "^0.17.17",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.38.0",
    "find-npm-prefix": "^1.0.2",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.1",
    "tar": "^6.1.13",
    "typescript": "^5.0.4",
    "unzipper": "^0.10.11"
  },
  "go-bin": {
    "name": "uncors",
    "path": "./bin",
    "url": "https://github.com/evg4b/uncors/releases/download/v{{version}}/uncors_{{version}}_{{platform}}_{{arch}}.tar.gz"
  }
}
